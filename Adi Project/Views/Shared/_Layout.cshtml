<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Additional Scripts -->
    <script src="~/scripts/jquery.validate.min.js"></script>
    <script src="~/scripts/jquery.validate.unobtrusive.min.js"></script>
    <style>
        .main-title {
            font-size: 3rem; /* גודל פונט גדול */
            font-weight: bold; /* משקל פונט דמוי־כבד */
            color: #333; /* צבע טקסט כהה */
            text-align: center; /* יישור טקסט במרכז */
            margin: 20px 0; /* רווחים למעלה ולמטה */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3); /* צללים לטקסט */
            letter-spacing: 1px; /* רווח בין אותיות */
            line-height: 1.2; /* גובה שורה */
            font-family: 'Arial', sans-serif; /* גופן נאה */
        }
    </style>

</head>
<body class="p-3 mb-2 bg-primary-subtle text-primary-emphasis">
    <nav class="navbar navbar-expand-lg navbar-light bg-light p-3 mb-2 bg-primary-subtle text-primary-emphasis">
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item">
                    @Html.ActionLink("Home", "Index", "Home", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Catalog", "Index", "Catalog", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item">
                    @Html.ActionLink("Administrator", "Index", "Admin", null, new { @class = "nav-link" })
                </li>
            </ul>
        </div>
    </nav>
    <div class="container text-center">
        <h1 class="main-title">The Best Pet Shop In Town</h1>
        @RenderSection("section1", required: false)
        @RenderBody()
        @RenderSection("section2", required: false)
    </div>
</body>
</html>
